{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "files": {
    "maxSize": 2000000,
    "include": [
      "src/**/*.{ts,tsx,js,jsx}",
      "./*.{ts,tsx,js,jsx,mjs,cjs}",
      "biome.json",
      "next.config.ts",
      "tailwind.config.js",
      "postcss.config.mjs",
      "vitest.config.ts",
      "vitest.integration.config.ts",
      "middleware.ts"
    ],
    "ignore": [
      ".next/**",
      "node_modules/**",
      "public/**",
      "**/generated/**",
      "turbo.json",
      "**/*.md",
      "scripts/"
    ]
  }
}
