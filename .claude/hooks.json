{
  "config": {
    "universal_linting": true,
    "zero_tolerance": true,
    "task_completion_enforcement": true,
    "fast_mode": false,
    "debug_mode": false,
    "languages": {
      "typescript": true,
      "go": false,
      "python": false,
      "rust": false,
      "nix": false
    },
    "typescript": {
      "strict_mode": true,
      "enforce_api_standards": true,
      "auto_organize_imports": true
    },
    "notifications": {
      "enabled": true,
      "ntfy_enabled": false
    }
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "^(Write|Edit|MultiEdit|Task)$",
        "hooks": [
          {
            "type": "command",
            "command": "node /Users/ossieirondi/Projects/kamdental/dental-dashboard/.claude/hooks/typescript-validator.cjs",
            "description": "Centralized TypeScript validation (Biome, type checking, coding standards)"
          }
        ]
      },
      {
        "matcher": "^mcp__.*__(write_file|edit_file|create_file)$",
        "hooks": [
          {
            "type": "command",
            "command": "node /Users/ossieirondi/Projects/kamdental/dental-dashboard/.claude/hooks/typescript-validator.cjs"
          }
        ]
      },
      {
        "matcher": "^Bash$",
        "hooks": [
          {
            "type": "command",
            "command": "node /Users/ossieirondi/Projects/kamdental/dental-dashboard/.claude/hooks/pnpm-enforcer.cjs"
          },
          {
            "type": "command",
            "command": "node /Users/ossieirondi/Projects/kamdental/dental-dashboard/.claude/hooks/commit-message-validator.cjs"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(Write|Edit|MultiEdit|Task)$",
        "hooks": [
          {
            "type": "command",
            "command": "node /Users/ossieirondi/Projects/kamdental/dental-dashboard/.claude/hooks/import-organizer.cjs",
            "description": "Auto-organize imports"
          },
          {
            "type": "command",
            "command": "node /Users/ossieirondi/Projects/kamdental/dental-dashboard/.claude/hooks/api-standards-checker.cjs",
            "description": "API standards validation"
          },
          {
            "type": "command",
            "command": "node /Users/ossieirondi/Projects/kamdental/dental-dashboard/.claude/hooks/task-completion-enforcer.cjs",
            "description": "CRITICAL: Final compliance check before task completion"
          },
          {
            "type": "command",
            "command": "node /Users/ossieirondi/Projects/kamdental/dental-dashboard/.claude/hooks/code-quality-reporter.cjs",
            "description": "Quality reporting and analytics"
          }
        ]
      },
      {
        "matcher": "^mcp__.*__(write_file|edit_file|create_file|read_file)$",
        "hooks": [
          {
            "type": "command",
            "command": "node /Users/ossieirondi/Projects/kamdental/dental-dashboard/.claude/hooks/import-organizer.cjs"
          },
          {
            "type": "command",
            "command": "node /Users/ossieirondi/Projects/kamdental/dental-dashboard/.claude/hooks/code-quality-reporter.cjs"
          }
        ]
      },
      {
        "matcher": "^Read$",
        "hooks": [
          {
            "type": "command",
            "command": "node /Users/ossieirondi/Projects/kamdental/dental-dashboard/.claude/hooks/code-quality-reporter.cjs"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "node /Users/ossieirondi/Projects/kamdental/dental-dashboard/.claude/hooks/notification-handler.cjs",
