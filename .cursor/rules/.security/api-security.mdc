  process.env.NEXT_PUBLIC_SUPABASE_URL!,
  process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY!, // Read-only public key
  {
    auth: {
      persistSession: true,
      autoRefreshToken: true
    }
  }
